<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <Button
        android:id="@+id/console_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_light"
        android:text="Launch console"
        android:textColor="@android:color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/code_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/console_button"
        android:freezesText="true"
        android:text="@string/hello_world"
        android:textColor="#000000"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/lock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/code_text_view"
        android:text="Do something important (and lock)"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/unlock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lock_button"
        android:text="Unlock important button"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/async_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/unlock_button"
        android:text="AsyncTask test"
        android:textColor="@android:color/black" />

    <CheckBox
        android:id="@+id/progress_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tree_button"
        android:layout_toRightOf="@+id/async_button"
        android:text="Show progress spinner"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/tree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/async_button"
        android:text="Tree test"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/pinchzoom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tree_button"
        android:text="Launch pinch-zoom test"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/expandolayout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pinchzoom_button"
        android:text="ExpandoLayout test"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/test_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/expandolayout_button"
        android:text="Launch TestActivity"
        android:textColor="@android:color/black" />
    
    <Button
        android:id="@+id/terminal_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/test_activity_button"
        android:text="Launch terminal emulator"
        android:textColor="@android:color/black" />

</RelativeLayout>